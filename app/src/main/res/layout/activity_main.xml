<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lado.registration.MainActivity">


    <EditText
        android:id="@+id/buckysInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="43dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/deleteButton" />

    <EditText
        android:id="@+id/buckysInputpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_below="@+id/buckysInput"
        android:layout_alignStart="@+id/buckysInput" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="54dp"
        android:onClick="deleteButtonClicked"
        android:text="Delete"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="96dp"
        android:layout_below="@+id/buckysInput" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addButtonClicked"
        android:text="Add"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="96dp"
        android:layout_alignBaseline="@+id/deleteButton"
        android:layout_alignBottom="@+id/deleteButton"
        android:layout_alignStart="@+id/buckysInputpass" />

    <TextView
        android:id="@+id/buckysText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="200dp"
        android:text="TextView"
        android:textSize="36dp"
        android:textIsSelectable="true"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
